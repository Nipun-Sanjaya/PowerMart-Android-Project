<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AboutusActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/backAboutUsButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:src="@drawable/baseline_arrow_back_24" />

            <ImageView
                android:id="@+id/bg_img"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="300dp"
                android:scaleType="fitCenter"
                android:src="@drawable/aboutus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bg_img"
                android:elevation="12dp"
                app:cardCornerRadius="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bg_img">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:id="@+id/contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="120dp"
                        android:layout_marginLeft="22dp"
                        android:fontFamily="serif"
                        android:text="Contact Us"
                        android:textColor="@color/orange"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        />

                    <View
                        android:id="@+id/line_view"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_below="@id/contact"
                        android:layout_marginStart="18dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="36dp"
                        android:layout_marginRight="36dp"
                        android:background="@color/black" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/line_view"
                        android:layout_marginStart="22dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:id="@+id/imgg"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@color/light_orange"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:contentDescription="TODO"
                            android:src="@drawable/baseline_call_24" />

                        <LinearLayout
                            android:id="@+id/lin_1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_toEndOf="@id/imgg"
                            android:layout_toRightOf="@id/imgg"
                            android:orientation="vertical"
                            android:background="@color/light_orange">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="0dp"
                                android:text="Phone No"
                                android:fontFamily="serif"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/call"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="8dp"
                                android:text="+94 784641491"
                                android:textColor="#0277BD"
                                android:textColorHighlight="@android:color/holo_red_dark"
                                android:textSize="16sp" />

                            <View
                                android:id="@+id/divider5"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:background="?android:attr/listDivider" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_mob"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/lin_1"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="15dp"
                            android:contentDescription="TODO"
                            android:background="@color/light_orange"
                            android:src="@drawable/baseline_email_24" />

                        <LinearLayout
                            android:id="@+id/lin_2"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@id/lin_1"
                            android:layout_marginTop="15dp"
                            android:layout_toEndOf="@id/img_mob"
                            android:layout_toRightOf="@id/img_mob"
                            android:orientation="vertical"
                            android:background="@color/light_orange">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="0dp"
                                android:text="Email Address"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"
                                android:fontFamily="serif"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/feedback"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="8dp"
                                android:text="kanipunsanjaya14@gmail.com"
                                android:textColor="#0277BD"
                                android:textColorHighlight="@color/black"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/mail_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/lin_2"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="15dp"
                            android:contentDescription="TODO"
                            android:src="@drawable/baseline_info_24"
                            android:background="@color/light_orange"/>

                        <LinearLayout
                            android:id="@+id/lin_3"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@id/lin_2"
                            android:layout_marginTop="15dp"
                            android:layout_toEndOf="@id/mail_img"
                            android:layout_toRightOf="@id/mail_img"
                            android:orientation="vertical"
                            android:background="@color/light_orange">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="0dp"
                                android:text="Ask You Query"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"
                                android:fontFamily="serif"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/send_your_message"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="8dp"
                                android:text="Send Your Message"
                                android:textColor="#0277BD"
                                android:textColorHighlight="@color/black"
                                android:textSize="16sp" />

                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <RelativeLayout
                                android:id="@+id/imgProfile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="250dp"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/aboutUsFacebook"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/facebook_logo" />

                                <ImageView
                                    android:id="@+id/instagram"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="55dp"
                                    android:contentDescription="TODO"
                                    android:src="@drawable/twitter_logo" />

                                <ImageView
                                    android:id="@+id/youtube"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="110dp"
                                    android:contentDescription="TODO"
                                    android:src="@drawable/youtube" />

                                <ImageView
                                    android:id="@+id/share"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="165dp"
                                    android:contentDescription="TODO"
                                    android:src="@drawable/google" />




                            </RelativeLayout>

                            <View
                                android:id="@+id/divider6"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="?android:attr/listDivider" />

                        </RelativeLayout>


                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>